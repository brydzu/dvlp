{
  "name": "dvlp",
  "version": "4.3.0",
  "description": "A no-nonsense dev server toolkit to help you develop quickly and easily for the web",
  "main": "dvlp.js",
  "repository": "https://github.com/popeindustries/dvlp.git",
  "author": "Alexander Pope <alex@pope-industries.com>",
  "license": "MIT",
  "private": false,
  "bin": {
    "dvlp": "./bin/dvlp"
  },
  "dependencies": {
    "commander": "^2.19.0",
    "esm": "^3.2.20",
    "fswatcher-child": "^1.1.1",
    "worker-farm": "^1.6.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "chalk": "^2.4.2",
    "chokidar": "^2.1.5",
    "cross-env": "^5.2.0",
    "debug": "^4.1.1",
    "eslint": "^5.15.3",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eventsource": "^1.0.7",
    "faye-websocket": "^0.11.1",
    "glob": "^7.1.3",
    "husky": "^1.3.1",
    "is-module": "^1.0.0",
    "koa": "^2.7.0",
    "koa-send": "^5.0.0",
    "lint-staged": "^8.1.5",
    "lit-html": "^1.0.0",
    "lodash": "^4.17.11",
    "lodash-es": "^4.17.11",
    "mime": "^2.4.0",
    "mocha": "^6.0.2",
    "node-fetch": "^2.3.0",
    "prettier": "^1.16.4",
    "read-pkg-up": "^5.0.0",
    "resolve": "^1.10.0",
    "resolve-from": "^4.0.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.7.0",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "sass": "^1.17.3",
    "send": "^0.16.2",
    "server-destroy": "^1.0.1",
    "sucrase": "^3.10.0",
    "terser": "^3.17.0"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "copy": "cp -f lib/bundler/bundle-worker.js . && cp -f lib/reloader/reload-client.min.js .",
    "delete": "rm -f bundle-worker.js dvlp.js reload-client.min.js",
    "format": "prettier --write './{lib,test}/**/*.{js,json}'",
    "lint": "eslint './{lib,test}/**/*.js'",
    "minify": "terser lib/reloader/reload-client.js -o lib/reloader/reload-client.min.js",
    "prepare": "npm run minify",
    "prepublishOnly": "npm run minify && npm run build && npm run copy",
    "postpublish": "npm run delete",
    "test": "cross-env NODE_ENV=test mocha test/*-test.js --reporter spec --bail --timeout 10000 --require lib/config.js",
    "demo": "./bin/dvlp test/fixtures/app.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --write",
        "eslint",
        "git add"
      ]
    },
    "ignore": [
      "*.min.js"
    ]
  }
}
